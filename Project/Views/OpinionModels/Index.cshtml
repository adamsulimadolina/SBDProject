@model IEnumerable<Project.Models.OpinionModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Opinion)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Opinion)
            </td>
          
            @if(ViewBag.AbleToModify==true){
            <td>
                <a asp-action="Edit" asp-route-id="@item.OpinionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OpinionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OpinionID">Delete</a>

            </td>
            }

        </tr>
}
    </tbody>
</table>
