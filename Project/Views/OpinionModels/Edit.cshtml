@model Project.Models.OpinionModel

@{
    ViewData["Title"] = "Edit";
}


<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-sm-12 my-5 mx-auto">
        <div class="text-center panel-minor ">
            <h3 class="">Dodaj swoją opinię</h3>
        </div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OpinionID" />
            <div class="form-group">
                <label class="control-label"></label>
                <textarea asp-for="Opinion" class="form-control box-shadow" rows="4" placeholder="Edytuj swoją opinię..."></textarea>
                <span asp-validation-for="Opinion" class="text-danger"></span>
            </div>
            <div class="form-group disabled d-none">
                <label asp-for="OwnerID" class="control-label"></label>
                <select asp-for="OwnerID" class="form-control" asp-items="ViewBag.OwnerID"></select>
                <span asp-validation-for="OwnerID" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="OpinionModels" asp-route-id="@Model.OwnerID">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
