                <th>
                    Procent dopasowania
                </th>
                <th>
                   Czat z Użytkownikiem
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                // if (item.TenantID_1 != ViewBag.LogTenantId)
                // {
