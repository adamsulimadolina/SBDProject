@model Project.Models.OwnerModel

@{
    ViewData["Title"] = "Create";
}

    <div class="row mt-5 px-3 font-weight-bold">
        <div class="col-lg-6 col-md-8 text-center mx-auto ">
            <h1>Skorzystaj z bycia Właścicielem</h1>
        </div>
    </div>
<div class="row mb-5 mt-3 p-3">
    <div class="col-lg-4 col-md-6 align-self-center mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="row px-3 justify-content-between">
                <div class="form-group">
                    <input type="submit" value="Rozpocznij" class="btn btn-secondary" />
                </div>
                <a asp-action="Index" asp-controller="Home">Powrót</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
