@model Project.Models.OwnerModel

@{
    ViewData["Title"] = "Edit";
}

    <div class="row mt-5 px-3 text-center">
        <div class="col-lg-6 col-md-8 align-self-center mx-auto">
            <p class="panel-minor-small">Edytuj Dane Właściciela</p>
        </div>
    </div>
<div class="row mb-5 mt-4 ">
    
    <div class="col-lg-4 col-md-6 align-self-center mx-auto text-color-create p-3 box-shadow">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OwnerID" />
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="User" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
