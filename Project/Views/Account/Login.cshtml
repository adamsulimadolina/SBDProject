@model Project.Models.UserModel

@{
    ViewData["Title"] = "Login";
}
    <div class="row mt-5 px-3">
        
        <div class="col-lg-4 col-md-6 align-self-center mx-auto text-color-create">
            <h1 class="">Zaloguj Się</h1>
        </div>
    </div>
    <div class="row mb-5 mt-3 p-3">
        <div class="col-lg-4 col-md-6 align-self-center mx-auto text-color-create">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label" ></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row justify-content-between px-3">
                    <div class="form-group">
                        <input type="submit" value="Zaloguj" class="btn btn-secondary" />
                    </div>
                    <div>
                        <a asp-action="Index" asp-controller="Home">Powrót</a>
                    </div>
                </div>
            </form>
            
        </div>


        
    </div>
    <div class="row p-3">
       
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
