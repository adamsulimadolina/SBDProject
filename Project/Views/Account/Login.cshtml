@model Project.Models.UserModel

@{
    ViewData["Title"] = "Login";
}
    <div class="row mt-5 px-3 text-center">
        
        <div class="col-lg-4 col-md-6 align-self-center mx-auto text-color-create">
            <p class="panel-minor-small">Zaloguj Się</p>
        </div>
    </div>
    <div class="row mb-5 mt-4 ">
        <div class="col-lg-3 col-md-6 align-self-center mx-auto text-color-create p-3 box-shadow">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <br />@Html.ValidationMessage("UserLoginError", "", new { @class = "text-danger" })
                </div>
                
                <div class="row justify-content-between px-3">
                    <div class="form-group">
                        <input type="submit" value="Zaloguj" class="btn btn-secondary" />
                    </div>
                    <div>
                        <a asp-action="Index" asp-controller="Home">Powrót</a>
                    </div>
                </div>
            </form>
            
        </div>


        
    </div>
    
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
