@model Project.Models.UserModel

@{
    ViewData["Title"] = "Register";
}
<div class="row mt-5 px-3 text-center">
   <div class="col-lg-5 col-md-7 align-self-center mx-auto">
       <p class="panel-minor-small">Zarejestruj Się</p>
    </div>
</div>
<div class="row mb-5 mt-4 ">
    <div class="col-lg-3 col-md-6 align-self-center mx-auto p-3 box-shadow">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
                @Html.ValidationMessage("UserExistsError", "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VerifyPassword" class="control-label"></label>
                <input asp-for="VerifyPassword" class="form-control" />
                <span asp-validation-for="VerifyPassword" class="text-danger"></span>
            </div>
            <div class="row justify-content-between px-3">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-secondary" />
                </div>
                <a asp-action="Index" asp-controller="Home">Powrót</a>
            </div>
        </form>
        
    </div>
</div>
<div class="row p-3">
    <div>
       
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
