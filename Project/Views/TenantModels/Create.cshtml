@model Project.Models.TenantModel

@{
    ViewData["Title"] = "Create";
}



    <div class="row mt-5 px-3 text-center justify-content-center">
        <div cclass="col-lg-6 col-md-8 align-self-center mx-auto text-color-create ">
            <p class="panel-minor-small">
                Wypełnij dane o sobie
            </p>
        </div>
    </div>

        <div class="row mb-5 mt-4 ">
            <div class="col-lg-4 col-md-6 align-self-center mx-auto text-color-create p-3 box-shadow">
                <form asp-action="Create" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsSmoking" /> @Html.DisplayNameFor(model => model.IsSmoking)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsVege" /> @Html.DisplayNameFor(model => model.IsVege)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control" asp-items="ViewBag.TypeofStatus"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-control" asp-items="ViewBag.TypeofGender"></select>
                    </div>
                    <div class="row justify-content-between px-3">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-secondary" />
                        </div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
 


